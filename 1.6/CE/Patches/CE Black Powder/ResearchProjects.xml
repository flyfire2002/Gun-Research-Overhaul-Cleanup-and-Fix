<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<!-- Make Metallic Cartidges depend on Adv. Cap and Ball Revolvers and the Breech Loader from CE Black Powder Revolvers and Rifles -->
	<Operation Class="PatchOperationFindMod">
	    <mods>
	        <li>CE Black Powder revolvers</li>
	    </mods>
            <match Class="PatchOperationAdd">
                <xpath>Defs/ResearchProjectDef[defName="Snek_MetallicCartridges"]/prerequisites</xpath>
                    <!-- Advanced Cap and Ball Revolvers -->
                    <value>
                        <li>Stage2R_BP</li>
                    </value>
            </match>
	</Operation>
	<Operation Class="PatchOperationFindMod">
	    <mods>
	        <li>CE Black Powder Rifles (Manny edition)</li>
	    </mods>
            <match Class="PatchOperationAdd">
                <xpath>Defs/ResearchProjectDef[defName="Snek_MetallicCartridges"]/prerequisites</xpath>
                    <!-- Breech-loading -->
                    <value>
                        <li>Stage2Rifle_BP</li>
                    </value>
            </match>
	</Operation>
</Patch>
